    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "start",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "args": [
                "lerna",
                "run",
                "start"
            ],
            "envFile": "${workspaceFolder}/local.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "start-srv",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "args": [
                "lerna",
                "run",
                "start",
                "--scope=mt-stats-srv"
            ],
            "envFile": "${workspaceFolder}/local.env"
        }
    ]
}